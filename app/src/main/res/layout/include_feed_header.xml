<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_feed_user_avatar"
        android:layout_width="@dimen/feed_user_avatar_size"
        android:layout_height="@dimen/feed_user_avatar_size"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        fresco:placeholderImage="@drawable/placeholder_avatar"
        fresco:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/text_feed_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_feed_user_avatar"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/inline_padding"
        android:layout_toEndOf="@id/image_feed_user_avatar"
        android:layout_toRightOf="@id/image_feed_user_avatar"
        android:lines="1"
        android:text="@string/placehold_short"
        />

    <TextView
        android:id="@+id/text_feed_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_feed_username"
        android:layout_alignStart="@id/text_feed_username"
        android:layout_below="@id/text_feed_username"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/default_padding"
        android:text="@string/placehold_long"
        />

  </RelativeLayout>
</merge>